<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".activities.Mypersonal_deteils">



    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginStart="13dp"
        android:text="Your Personal Details "
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"
        android:text="User name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <EditText
        android:id="@+id/pUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginTop="0dp"
        android:layout_marginStart="4dp"

        android:inputType="text"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pUsername"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:text="Your Password"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pPassword"
        android:layout_marginTop="6dp"
        android:layout_marginStart="2dp"
        android:text=" Change Password"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000" />
    <EditText
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/textView77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/changePassword"
        android:layout_marginTop="6dp"
        android:layout_marginStart="2dp"
        android:text=" Change ssn"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000" />
    <EditText
        android:id="@+id/pssn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView77"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:inputType="number" />
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pssn"
        android:layout_marginTop="6dp"
        android:layout_marginStart="2dp"
        android:text=" Change phone"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000" />
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:inputType="number" />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_marginTop="6dp"
        android:layout_marginStart="2dp"
        android:text=" Change gender"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView9"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:inputType="number" />



    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender"
        android:layout_marginTop="20dp"
        android:layout_marginStart="6dp"
        android:text="Update"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000" />

</RelativeLayout>