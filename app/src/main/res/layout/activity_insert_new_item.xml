<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
            android:layout_marginTop="40dp"
    tools:context=".others.InsertNewItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="16dp">

        <ImageView
            android:background="@drawable/ic_launcher_foreground"
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            ></ImageView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/titelonAdd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:hint=" Titel "
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="@color/white"
                android:textSize="25dp"></EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/desonAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint=" Descreption "
                android:inputType="textMultiLine"
                android:textColorHint="@color/white"
                android:textSize="25dp"></EditText>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/salaryonadd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:hint=" salary "
                android:inputType="number"
                android:maxLines="1"
                android:textColorHint="@color/white"
                android:textSize="25dp">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            <EditText
                    android:id="@+id/saleonadd"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="20dp"
                    android:hint=" Sale "
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:textSize="25dp">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="catagory"
                android:textSize="30sp"
                android:layout_gravity="center_vertical"

                >

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp">

                <Spinner
                    android:id="@+id/spinner_catagores"
                    android:layout_marginStart="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginHorizontal="20dp">

                </Spinner>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="size"
                android:textSize="30sp"
                android:layout_gravity="center_vertical"

                >

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp">

                <Spinner
                    android:id="@+id/spinner_sizes"
                    android:layout_marginStart="165dp"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginHorizontal="20dp">

                </Spinner>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/itemnumberonadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:hint=" itemnumber "
                android:inputType="number"
                android:maxLines="1"
                android:textColorHint="@color/white"
                android:textSize="25dp"></EditText>

        </com.google.android.material.textfield.TextInputLayout> -->



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/qr_image"
                android:layout_marginTop="20dp"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/qr">

            </ImageView>

            <TextView
                android:id="@+id/qr_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginStart="35dp"
                android:layout_marginVertical="20dp">

            </TextView>




        </LinearLayout>

        <Button
            android:id="@+id/addonAdd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/blacke_buton2"
            app:backgroundTint="@null"
            android:text="Add New item"
            android:textSize="26sp"/>


    </LinearLayout>
</ScrollView>