<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MangeAllProducts"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/dark_gray">


    <LinearLayout

        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/arrow_back" />


    </LinearLayout>

    <Button
        android:id="@+id/insertNewproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/white_buton2"
        android:drawableLeft="@drawable/arrow"
        android:text="Add New product"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:cornerRadius="8dp"


        />

    <Button
        android:id="@+id/mangecatagoty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/white_buton2"
        android:drawableLeft="@drawable/menu"
        android:text="Mange Catagory"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/manageallproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_button"
        android:drawableLeft="@drawable/heart"
        android:text="Mange product"
        app:backgroundTint="@null"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/manageallusers"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_button"
        android:drawableLeft="@drawable/man"
        android:text="Manege Users"
        app:backgroundTint="@null"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/manageallorder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_button"
        android:drawableLeft="@drawable/bage"
        android:text="All Order"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/topsalesbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_button"
        android:text="View Top Sales"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:cornerRadius="8dp" />

</LinearLayout>